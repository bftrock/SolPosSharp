    </PropertyGroup>

    <ItemGroup>
	    <None Include="..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
	
	<ItemGroup>
		<None Include="..\LICENSE.txt" Pack="true" PackagePath=""/>
	</ItemGroup>

</Project>
